<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="340dp"
        android:layout_height="500dp"
        android:elevation="10dp"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:padding="5dp"
            android:src="@drawable/ic_delete_back"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/et_memo_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:ellipsize="end"
            android:fontFamily="@font/apple_gothic_800"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="28sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="제목"
            android:background="@android:color/transparent"/>

        <EditText
            android:id="@+id/et_memo_desc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="15dp"
            android:ellipsize="end"
            android:fontFamily="@font/apple_gothic_600"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_memo_title"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="설명"
            android:gravity="top"
            android:background="@android:color/transparent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>