<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.NoteFragment">
    <ImageButton
        android:id="@+id/btn_drawer_opener"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_drawer_opener"
        android:layout_margin="30dp"
        android:backgroundTint="@color/white"
        app:iconTint="@color/grey_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/layout_round_button"
        android:elevation="5dp" />
    <ImageButton
        android:id="@+id/btn_user"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/btn_user"
        android:layout_margin="30dp"
        android:backgroundTint="@color/white"
        app:iconTint="@color/grey_600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/layout_round_button"
        android:elevation="5dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_memo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btn_drawer_opener"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        android:padding="20dp"
        tools:listitem="@layout/item_memos" />
    <ImageButton
        android:id="@+id/btn_add_memo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginBottom="20dp"
        android:padding="15dp"
        android:src="@drawable/btn_note_add"
        android:scaleType="fitXY"
        app:iconTint="@color/grey_600"
        android:background="@drawable/layout_round_button"
        android:elevation="5dp"
        android:backgroundTint="@color/orange_400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>