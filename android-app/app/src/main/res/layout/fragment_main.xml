<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.MainFragment"
    android:background="@color/grey_50">

    <ImageButton
        android:id="@+id/fab_drawer"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/fab_drawer_opener"
        android:layout_margin="20dp"
        android:backgroundTint="@color/white"
        app:iconTint="@color/grey_600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/layout_round_box" />
    <ImageButton
        android:id="@+id/fab_user"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/fab_user"
        android:layout_margin="20dp"
        android:backgroundTint="@color/white"
        app:iconTint="@color/grey_600"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/layout_border_button" />
    <TextView
        android:id="@+id/tv_main_fragment_description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_fragment_description1"
        android:textSize="22sp"
        android:fontFamily="@font/apple_gothic_300"
        app:layout_constraintTop_toBottomOf="@id/fab_drawer"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"/>
    <TextView
        android:id="@+id/tv_main_fragment_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_fragment_description2"
        android:textSize="25sp"
        android:fontFamily="@font/apple_gothic_600"
        app:layout_constraintTop_toBottomOf="@id/tv_main_fragment_description1"
        android:layout_marginHorizontal="20dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_search"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="40dp"
        app:layout_constraintTop_toBottomOf="@id/tv_main_fragment_description2"
        tools:layout_editor_absoluteX="40dp">
        <androidx.appcompat.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="40dp"
            android:autofillHints="Search"
            android:background="@drawable/layout_round_search_view"
            android:backgroundTint="@color/grey_200"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/fab_search_setting"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_search_setting"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="10dp"
            app:icon="@drawable/search_setting"
            app:iconTint="@color/white"
            android:backgroundTint="@color/orange_400"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/search_view"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_search" />
</androidx.constraintlayout.widget.ConstraintLayout>
